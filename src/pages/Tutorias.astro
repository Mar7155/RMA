---
import Layout from "@/layouts/Layout.astro";
import MyCalendar from "@/components/Calendario.tsx";
import TutoriasInterface from "@/components/Tutorias";
---

<Layout title="Tutorias">
    <div class="title">
        <h1 class="text-3xl mt-4 font-semibold">Reserva una Asesoria</h1>
    </div>
    <section class="contenedor-tutorias">
        <TutoriasInterface client:idle/>
    </section>
</Layout>

<style>
    .contenedor-tutorias {
        display: flex;
        justify-content: center;
        align-items: center;
    }
    .title {
        display: flex;
        justify-content: center;
        align-items: center;
        font-size: 14px;
        margin-bottom: 14px;
    }
</style>