---
import Layout from "../../layouts/Layout.astro";


const { producto_id } = Astro.params;
const url = new URL(Astro.request.url); // Accedemos a la URL completa
const titulo = url.searchParams.get("titulo"); // Obtenemos el parámetro 'titulo'
const descripcion = url.searchParams.get("descripcion");
const tipo = url.searchParams.get("tipo");
const area = url.searchParams.get("area");
const link = url.searchParams.get('url');

//const link = "https://drive.google.com/file/d/1_2-xkZq8KClTC71lPW2sGqrtnd9v5yv1/preview";

---

<Layout title=`Recursos ${titulo}`>
    <main>
        <div>
            <section class="clases_hero">
                <div class="pdf-section">
                    <div class="iframe-container">
                        <iframe
                            src={link}
                            style="width: 100%; height: 500px; border: none;"
                            allowfullscreen
                            loading="lazy"
                        ></iframe>
                        <div class="watermark">Red Medical Advisor Red Medical Advisor Red Medical Advisor Red Medical Advisor Red Medical Advisor Red Medical Advisor</div>  
                        <div class=" absolute top-0 right-2 bg-white w-14 h-full "></div>
                    </div>
                </div>
                <div class="info-section">
                    <h2 class="document-title">{titulo}</h2>
                    <p class="document-description">
                        {descripcion}
                        Lorem ipsum dolor sit amet, consectetur adipiscing elit,
                        sed do eiusmod tempor incididunt ut labore et dolore magna
                        aliqua. Ut enim ad minim veniam, quis nostrud exercitation
                        ullamco laboris nisi ut aliquip ex ea commodo consequat.
                        Duis aute irure dolor in reprehenderit in voluptate velit
                        esse cillum dolore eu fugiat nulla pariatur.
                    </p>
                    <div class="button-group">
                        <button class="btn btn-white">{tipo}</button>
                        <button class="btn btn-white">{area}</button>
                    </div>
                    <a href="/Recursos">
                        <button class="btn btn-back">Volver</button>
                    </a>
                </div>
                </section>
        </div>
    </main>
</Layout>

<style>
    .clases_hero {
        display: flex;
        flex-direction: row;
        height: auto;
        justify-content: center;
        align-items: flex-start;
        gap: 10px;
        margin-top: 1rem;
        padding: 20px 40px 20px 20px;
    }

    .pdf-section {
        width: 60%;
        display: flex;
        justify-content: center;
    }

    .iframe-container {
        position: relative;
        width: 100%;
        height: 500px;
    }

    .watermark {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%) rotate(-45deg);
        font-size: 40px;
        color: rgba(0, 0, 0, 0.1);
        font-weight: bold;
        pointer-events: none; 
    }

    .block {
        position: absolute;
        top: 0;
        right: 0;
        width: 4rem;
        height: 4rem;
        background-color: rgb(0, 0, 0);
    }

    .info-section {
        width: 35%;
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        padding: 20px;
        border-radius: 12px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        background-color: #fff;
        margin-right: 20px;
    }

    .section_title {
        font-size: 24px;
        margin-bottom: 14px;
        color: #333;
    }

    .button-group {
        display: flex;
        gap: 10px;
    }

    .btn {
        font-size: 12px;
        padding-top: 0.5rem;
        padding-bottom: 0.5rem;
        padding-left: 1rem;
        padding-right: 1rem;
        border-radius: 4000rem;
        border: 1px solid #4d4d4d;
        transition: border-color 0.3s ease;
        margin-bottom: 16px;
    }

    .btn-white {
        background-color: white;
        color: #333;
    }

    .btn-white:hover {
        background-color: #f1f1f1;
        border-color: transparent;
    }

    .btn-back {
        position: absolute;
        bottom: 20px;
        right: 60px;
        font-size: 16px;
        padding-top: 0.5rem;
        padding-bottom: 0.5rem;
        padding-left: 2rem;
        padding-right: 2rem;
        border-radius: 10px;
        border: 1px solid #ff4343;
        background-color: #ff4343;
        color: white;
        transition: border-color 0.3s ease;
        margin-bottom: 16px;
        cursor: pointer;
    }

    .btn-back:hover {
        background-color: #e93b3bfd;
        border-color: transparent;
    }

    .document-title {
        font-size: 18px;
        font-weight: bold;
        margin-bottom: 10px;
        color: #333;
    }

    .document-description {
        font-size: 14px;
        color: #666;
        margin-bottom: 15px;
        line-height: 1.4;
        text-align: justify;
    }

    @media (max-width: 768px) {
        .clases_hero{
            flex-direction:column-reverse;
            gap: 2rem;
        }
        .btn-back{
            position: relative;
            top: 1rem;
            left: .1rem;
        }
        .pdf-section{
            width: 97%;
        }
        .info-section{
            width: auto;
        }
    }
</style>
