  .row-group {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    width: 100%;
    margin-bottom: 1rem;
  }

  .input-group {
    flex: 1;
    display: flex;
    flex-direction: column;
  }

  .full-width {
    display: flex;
    align-items: center;
    gap: 1rem;
    width: 100%;
  }

  .value-group {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .edit-input {
    width: 100%;
    padding: 1rem;
    border: 1px solid #dddfe2;
    border-radius: 6px;
    font-size: 1rem;
    transition: 0.2s ease all;
  }

  .edit-input:focus {
