    align-items: center;
    justify-content: center;
    white-space: nowrap;
    font-size: 14px;
    font-weight: 500;
    height: 2.5rem;
    border-radius: 8px;
    background-color: rgb(255, 255, 255);
    transition: background-color 0.5s;
    border: 1px solid #d1d5db;
    margin-right: 8px;
    padding: 0rem 1rem;
  }
  .reg {
    display: flex;
    align-items: center;
    justify-content: center;
    white-space: nowrap;
    font-size: 14px;
    font-weight: 500;
    height: 2.5rem;
    border-radius: 8px;
    background-color: #ff3131;
    padding: 0rem 1rem;
    transition: background 0.5s;
    color: white;
  }

  .in:focus-visible {
    outline: 2px solid #5a67d8;
    outline-offset: 2px;
  }

  .in:disabled {
    pointer-events: none;
    opacity: 0.5;
  }

  .in:hover {
    background-color: #e2e8f0;
    color: #482d2d;
  }
  .reg:hover {
    background-color: #a72020;
  }

  .nav a:after,
  .nav a:before {
    content: "";
    position: absolute;
    display: block;
    border: 0px solid transparent;
  }
  .nav a:after {
    width: 0%;
    height: 80%;
    border-bottom: 1px solid #000000;
    transition: all 0.6s ease;

    color: #961c1c;
  }

  .nav a:before {
    width: 120%;
    height: 0%;
    transition: all 0.6s ease;
  }

  .nav a:hover::before {
    height: 80%;
  }

  .nav a:hover::after {
    width: 100%;
  }

