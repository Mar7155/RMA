    align-items: center;
    text-align: center;
  }

  .home-content {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .home-get-results {
    font-size: 1rem;
  }

  .home-headline {
    font-size: 3rem;
  }

  .home-description {
    font-size: 1rem;
    color: #ffffff;
  }

