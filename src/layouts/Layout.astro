---
import Navbar from "@/components/Navbar.tsx";
import { ViewTransitions, fade, slide } from "astro:transitions";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/RMA - SVG.svg" />
    <meta name="generator" content={Astro.generator} />
    <style>
      @import url("https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&display=swap");
    </style>
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body>
    <div class="navBar">
      <Navbar client:idle />
    </div>
    <slot />
  </body>
</html>
<style is:global>
  * {
    margin: 0;
  }
  :root {
    --red-50: 254, 242, 242;
    --red-200: 254, 202, 202;
    --red-600: 220, 38, 38;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--red-50)),
      rgb(var(--red-200)) 30%,
      white 60%
    );
  }
  html {
    font-family: "Inter", sans-serif;
    background-color: rgb(255, 255, 255);
    scroll-behavior: smooth;
  }
  code {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      Liberation Mono,
      DejaVu Sans Mono,
      Bitstream Vera Sans Mono,
      Courier New,
      monospace;
  }

  .contenedor {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: auto;
    height: 5rem;
    padding: 0rem 10rem;
    margin: auto;
    position: relative;
  }

  .contenedor-menu-toggle {
    display: none;
  }
  .logo {
    display: flex;
    align-items: center;
    height: 120px;
    justify-content: flex-start;
  }

  .nav {
    display: inline-flex;
    align-items: center;
    justify-content: space-evenly;
    gap: 3rem;
  }

  .nav a {
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;
    padding: 4px 14px;
  }

  a {
    text-decoration: none;
  }

  .user-icon {
    border-radius: 40%;
    cursor: pointer;
    border-style: none;
    background: none;
  }

  .menu-toggle {
    display: none;
    font-size: 1.5rem;
    background: none;
    border: none;
    cursor: pointer;
    z-index: 30;
    position: absolute;
    left: 10px;
    top: 1rem;
    transform: translateY(-50%);
    transition:
      transform 0.3s ease,
      opacity 0.3s ease;
  }

  @media (max-width: 968px) {
    .contenedor {
      padding: 0 2rem;
    }

    .logo {
      justify-content: center;
    }
    .contenedor-menu-toggle {
      display: flex;
    }
    .menu-toggle {
      display: block;
      position: absolute;
      left: 10px;
      top: 50%;
      transform: translateY(-50%);
      z-index: 80;
      transition:
        transform 0.3s ease,
        opacity 0.3s ease;
    }

    .nav {
      display: flex;
      flex-direction: column;
      position: fixed;
      top: 0;
      left: 0;
      width: 100vw;
      height: 100vh;
      background-color: rgb(255, 255, 255);
      padding-top: 1rem;
      align-items: center;
      justify-content: center;
      gap: 2rem;
      transform: translateY(-100%);
      transition: transform 0.5s ease-in-out;
      opacity: 0;
      z-index: 50;
      overflow: hidden;
    }

    .nav.open {
      transform: translateY(0);
      opacity: 1;
    }

    .nav a {
      color: #000000;
      font-size: 1.5rem;
    }

    .menu-toggle:focus {
      outline: none;
    }
  }

  .sub-menu-wrap {
    position: absolute;
    top: 100%;
    left: auto;
    right: 0%;
    width: 280px;
    max-height: 0px;
    overflow: hidden;
    transition: max-height 0.5s;
  }

  .sub-menu-wrap.open-menu {
    max-height: 400px;
  }

  .sub-menu {
    background: #fff;
    padding: 15px;
    margin: 10px;
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.4);
  }

  .sub-menu hr {
    border: 0;
    height: 1px;
    width: 100%;
    background: #ccc;
    margin: 15px 0 10px;
  }

  .sub-menu-link {
    width: 230px;
    height: 32px;
    display: flex;
    align-items: center;
    text-decoration: none;
    color: #525252;
    margin: 6px 0;
    gap: 1rem;
    background: none;
    border-style: none;
    cursor: pointer;
  }

  .sub-menu-link p {
    font-size: 14px;
  }

  .sub-menu-link span {
    font-size: 22px;
    transition: transform 0.4s;
  }

  .sub-menu-link:hover {
    background-color: #f5f5f5;
    border-radius: 5px;
  }

  .sub-menu-link:hover span {
    transform: translateX(5px);
  }

  .sub-menu-link:hover p {
    font-weight: 600;
  }

  .user-info {
    display: flex;
    align-items: center;
  }

  .user-details {
    display: flex;
    flex-direction: column;
    white-space: nowrap;
    max-width: 150px;
  }

  .user-info h2 {
    font-size: 18px;
    font-weight: 600;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    max-width: 150px;
  }

  .user-info p.user-email {
    font-size: 12px;
    color: #888;
    margin-top: 2px;
  }

  .user-info img {
    width: 50px;
    border-radius: 50%;
    margin-right: 10px;
  }

  .login {
    display: flex;
  }

  .us {
    display: flex;
    position: relative;
    z-index: 20;
  }

  .in {
    display: flex;
    align-items: center;
    justify-content: center;
    white-space: nowrap;
    font-size: 14px;
    font-weight: 500;
    height: 2.5rem;
    border-radius: 40px;
    background-color: rgb(255, 255, 255);
    transition: background-color 0.5s;
    border: 1px solid #d1d5db;
    margin-right: 8px;
    padding: 0rem 1rem;
  }

  .reg {
    display: flex;
    align-items: center;
    justify-content: center;
    white-space: nowrap;
    font-size: 14px;
    font-weight: 500;
    height: 2.5rem;
    border-radius: 40px;
    background-color: #ff3131;
    padding: 0rem 1rem;
    transition: background 0.5s;
    color: white;
  }

  .in:focus-visible {
    outline: 2px solid #5a67d8;
    outline-offset: 2px;
  }

  .in:disabled {
    pointer-events: none;
    opacity: 0.5;
  }

  .in:hover {
    background-color: #e2e8f0;
    color: #482d2d;
  }

  .reg:hover {
    background-color: #a72020;
  }

  .nav a:after,
  .nav a:before {
    content: "";
    position: absolute;
    display: block;
    border: 0px solid transparent;
  }

  .nav a:after {
    width: 0%;
    height: 80%;
    border-bottom: 1px solid #000000;
    transition: all 0.6s ease;
    color: #961c1c;
  }

  .nav a:before {
    width: 120%;
    height: 0%;
    transition: all 0.6s ease;
  }

  .nav a:hover::before {
    height: 80%;
  }

  .nav a:hover::after {
    width: 100%;
  }

  .home-section {
      display: flex;
      justify-content: flex-start;
      align-items: center;
      padding: 0; 
      gap: 2rem; 
      transform: translateX(-3rem);
  }

  .home-content {
      display: flex;
      flex-direction: column;
      gap: 1.5rem;
      max-width: 60%;
  }

  .home-headline {
      font-size: 60px;
      font-weight: bold;
      color: #ff3131; 
      margin: 0;
      line-height: 1.2;
  }

  .home-description {
      font-size: 18px;
      color: #282829;
      margin: 0;
      line-height: 1.5;
      white-space: pre-line;
  }

  .home-cta-button {
      background-color: #ff3131;
      color: white;
      border: none;
      width: 12rem;
      padding: 0.75rem 1.5rem;
      font-size: 1rem;
      font-weight: 500;
      border-radius: 40px;
      cursor: pointer;
      transition: background-color 0.3s ease;
  }

  .home-cta-button:hover {
      background-color: #a72020;
  }

