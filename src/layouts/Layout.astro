  .profile-form-label {
    display: block;
    font-size: 0.875rem;
    font-weight: 500;
    margin-bottom: 0.5rem;
  }

  .profile-form-input {
    width: 100%;
    padding: 0.5rem;
    font-size: 1rem;
    line-height: 1.5;
    border: 1px solid #e5e7eb;
    border-radius: 0.25rem;
    background-color: #fff;
  }

  .profile-form-input:read-only {
    background-color: #f3f4f6;
  }

  /* Button styles */
  .profile-btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0.5rem 1rem;
    font-size: 0.875rem;
    font-weight: 500;
    line-height: 1.5;
    text-align: center;
    white-space: nowrap;
    vertical-align: middle;
    cursor: pointer;
    user-select: none;
    border: 1px solid transparent;
    border-radius: 0.25rem;
    transition: all 0.15s ease-in-out;
  }

  .profile-btn-primary {
    color: #ffffff;
    background-color: #0070f3;
    border-color: #0070f3;
  }

  .profile-btn-outline {
    color: #374151;
    background-color: transparent;
    border-color: #e5e7eb;
  }

  .profile-btn-link {
    color: #0070f3;
    background-color: transparent;
    text-decoration: underline;
  }

  /* Layout styles */
  .profile-flex {
    display: flex;
  }

  .profile-flex-col {
    flex-direction: column;
  }

  .profile-items-center {
    align-items: center;
  }

  .profile-justify-between {
    justify-content: space-between;
  }

  .profile-space-y-4 > * + * {
    margin-top: 1rem;
  }

  .profile-space-x-2 > * + * {
    margin-left: 0.5rem;
  }

  .profile-grid {
    display: grid;
    gap: 1.5rem;
  }

  /* Profile picture styles */
  .profile-picture {
    position: relative;
    width: 120px;
    height: 120px;
  }

  .profile-picture img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 50%;
    border: 2px solid #f3f4f6;
  }

  .profile-picture-edit {
    position: absolute;
    bottom: -0.5rem;
    right: -0.5rem;
    width: 2rem;
    height: 2rem;
    border-radius: 50%;
    background-color: #fff;
    border: 1px solid #e5e7eb;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
  }

  /*calendario*/

  .calendar-container {
    text-align: center;
    margin: 0 auto; /* Centrar el calendario */
    max-width: 400px;
  }

  /* Día seleccionado (círculo azul) NO SIRVEEEEEE FUCK */
  .day-picker .rdp-day--selected {
    background-color: #007bff;
    color: white;
    border-radius: 50%;
  }

