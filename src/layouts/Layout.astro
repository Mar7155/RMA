    display: flex;
    align-items: center;
  }
  .user-details {
    display: flex;
    flex-direction: column;
    white-space: nowrap;
    max-width: 150px;
  }
  .user-info h2 {
    font-size: 18px;
    font-weight: 600;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    max-width: 150px;
  }
  .user-info p.user-email {
    font-size: 12px;
    color: #888;
    margin-top: 2px;
  }
  .user-info img {
    width: 50px;
    border-radius: 50%;
    margin-right: 10px;
  }
  .login {
    display: flex;
  }
  .us {
    display: flex;
    position: relative;
    z-index: 20;
  }
  .in {
